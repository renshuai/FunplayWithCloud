.container {
  /* height: 500rpx; */
  overflow: auto;
  border-top: 1px solid #ddd;
}
.picker {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  margin-top: 40rpx;
}
.date-value {
  flex: 1;
  border: 1px solid #ddd;
  padding: 10rpx;
}

.result-container {
  margin: 0 20rpx;
  border: 1px solid #ddd;
  padding: 20rpx;
  text-align: center;
  margin-top: 20rpx;
}

.result-date {
  font-size: 40rpx;
  font-weight: 700;
}

.result-nonglo {
  font-weight: 700;
  font-size: 40rpx;
}

.result-festival {
  font-weight: 700;
  font-size: 40rpx;
}

.result-tgdz {
  font-weight: 700;
}

.result-day {
  font-size: 100rpx;
  font-weight: 700;
}

.detail-item {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.detail-prop {
  /* padding: 10rpx; */
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #999;
  color: #fff;
  margin-right: 20rpx;
}

.detail-prop-suit {
  background-color: #00ff00;
}

.detail-prop-taboo {
  background-color: #ff0000;
}

.detail-value {
  flex: 1;
  text-align: left;
}